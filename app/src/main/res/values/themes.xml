<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Orate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="smallButtonTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">@dimen/heightCommon</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bigButtonTheme">
        <item name="android:layout_width">@dimen/widthCommon</item>
        <item name="android:height">70dp</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="inputBoxTheme">
        <item name="android:layout_width">@dimen/widthCommon</item>
        <item name="android:layout_height">@dimen/heightCommon</item>
        <item name="android:background">@drawable/inputbox</item>
<item name="android:paddingLeft">8dp</item>
    </style>

    <style name="searchBoxTheme">
        <item name="android:layout_width">@dimen/widthCommon</item>
        <item name="android:layout_height">@dimen/heightCommon</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:backgroundTint">@color/searchBox</item>

    </style>

    <style name="textTheme">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="fragmentTitleTheme">
        <item name="android:color">@color/textColor</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>


    <dimen name="profileSize">50dp</dimen>
    <dimen name="profileFragmentImage">74dp</dimen>


    <dimen name="widthCommon">320dp</dimen>
    <dimen name="heightCommon">60dp</dimen>
</resources>


